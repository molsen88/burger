<div>
    <h1>Burgers App</h1>
    <hr>
    <h4>New Burgers</h4>
    {{#each burgers}}
    <div>
        {{#unless devoured}}

        <p>{{burgers_name}}
        </p>
        <button data-id={{this.id}} class='eaten'>Eat</button>

        <hr>

        {{/unless}}

    </div>
    {{/each}}
    <hr>
    <h4>Devoured</h4>
    {{#each burgers}}
    <div>


        {{#if devoured}}
        <p>
            {{burger_name}}
        </p>

        <button data-id={{this.id}} class='delete'>Delete</button>
        <hr>

        {{/if}}


    </div>
    {{/each}}
    <hr>
    <h2>Add a burger to the list</h2>
    <input type='text' id='new-burger'>
    <button id='addBurger'>Add burger!</button>
</div>
